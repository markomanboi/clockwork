<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingBottom="20dp"
    android:background="@drawable/cardview_border">


    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the name of the messenger"
        android:textSize="15dp"
        android:fontFamily="@font/patua_one"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txtClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the class name"
        android:fontFamily="@font/patua_one"
        android:layout_marginLeft="30dp"
        android:textSize="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/txtName"
        android:layout_marginTop="1dp"
        />

    <TextView
        android:id="@+id/txtMessagePreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the message preview"
        android:fontFamily="@font/patua_one"
        android:layout_marginLeft="30dp"
        android:textSize="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/txtClass"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the message preview time"
        android:fontFamily="@font/patua_one"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/txtClass"
        android:layout_toRightOf="@id/txtMessagePreview"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>